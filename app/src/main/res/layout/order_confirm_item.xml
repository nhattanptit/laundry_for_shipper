<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/quantity_text"
            android:layout_width="@dimen/dp_24"
            android:layout_height="0dp"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="50" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/x_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="@id/quantity_text"
            app:layout_constraintStart_toEndOf="@+id/quantity_text"
            app:layout_constraintTop_toTopOf="@id/quantity_text"
            tools:text="x" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="@id/quantity_text"
            app:layout_constraintStart_toEndOf="@+id/x_text"
            app:layout_constraintTop_toTopOf="@id/quantity_text"
            tools:text="T-SHIRT" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="@id/quantity_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/quantity_text"
            tools:text="2$" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>