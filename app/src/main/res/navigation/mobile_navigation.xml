<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_notifications">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.laundry.app.view.fragment.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.laundry.app.view.fragment.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.laundry.app.view.fragment.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_navigation_RegisterOrLoginFragment"
            app:destination="@id/navigation_RegisterOrLoginFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_RegisterOrLoginFragment"
        android:name="com.laundry.app.view.fragment.account.RegisterOrLoginFragment"
        android:label="RegisterOrLoginFragment"
        tools:layout="@layout/register_login_fragment" >
        <action
            android:id="@+id/action_navigation_RegisterOrLoginFragment_to_navigation_login"
            app:destination="@id/navigation_login" />
        <action
            android:id="@+id/action_navigation_RegisterOrLoginFragment_to_navigation_register"
            app:destination="@id/navigation_register" />
    </fragment>

    <dialog
        android:name="com.laundry.app.view.dialog.LoginDialog"
        android:id="@+id/navigation_login"
        android:label="Login"
        tools:layout="@layout/login_dialog" />

    <dialog
        android:name="com.laundry.app.view.dialog.RegisterAccountDialog"
        android:id="@+id/navigation_register"
        android:label="Register"
        tools:layout="@layout/register_account_dialog" />

</navigation>